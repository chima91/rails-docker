<%= form_for board do |f| %>
  <div class="form-group">
    <%= f.label :name, '名前' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :title, 'タイトル' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div>
    <%= f.label :body, '本文' %>
    <%= f.text_field :body, class: 'form-control', rows: 8 %>
  </div>
  <%= f.submit '保存する', class: 'btn btn-primary mt-5' %>
<% end %>